{% extends 'base.html.twig' %}

{% block title %}Hello EmailController!{% endblock %}

{% block body %}

<div class="row">
    <div class="col-12">
        {{ form_start(form) }}
            <div class="row m-5 border border-right bg bg-secondary p-5">
                <div class="col-4"> 
                    <div class="form-group">
                        {{ form_label(form.libelle) }}
                        {{ form_widget(form.libelle) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.subject) }}
                        {{ form_widget(form.subject) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.categorie) }}
                        {{ form_widget(form.categorie) }}
                    </div>
                </div>
                <div class="col-8">
                    <div class="form-group">
                        {{ form_label(form.body) }}
                        {{ form_widget(form.body) }}
                    </div>
                </div>
                <div class="col-12">
                    {{ form_widget(form.save) }}
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}